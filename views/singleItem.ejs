<script>
  let myReq = new XMLHttpRequest();
  let end = `${window.location.pathname.split("/").pop()}`;
  myReq.open("GET", "/dashboard/shopItem/" + end);
  myReq.onload = () => {
    let myData = JSON.parse(myReq.responseText);

    $("#name").text(`Name: ${myData.name}`);
    $("#size").text(`Size: ${myData.size}`);
    $("#price").text(`Price: ${myData.price}$`);
    $("#quality").text(`Quality: ${myData.quality}`);
    $("#description").text(`Description: ${myData.description}`);
    $("#img").attr("src",`/dashboard/${
              myData.itemImage
            }`);

  };
  myReq.send();
</script>
